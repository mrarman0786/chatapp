# Sample environment variables for deployment
# Copy this to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=production

# MySQL Database Configuration (get from your hosting provider)
DB_HOST=your-database-host
DB_PORT=3306
DB_USER=your-database-user
DB_PASSWORD=your-database-password
DB_NAME=chat_app_db

# Session Configuration (generate a strong secret!)
SESSION_SECRET=generate-a-64-character-random-string-here

# Cookie Configuration
COOKIE_MAX_AGE=86400000
